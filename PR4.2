using System;

class Посылка
{
    public string Описание { get; }
    public double Вес { get; }

    public Посылка(string описание, double вес)
    {
        Описание = описание;
        Вес = вес;
    }
}

class СервисОтправки
{
    private double лимитВесаОтправленныхПосылок;
    private double общийВесОтправленныхПосылок;

    public СервисОтправки(double лимитВесаОтправленныхПосылок)
    {
        this.лимитВесаОтправленныхПосылок = лимитВесаОтправленныхПосылок;
    }

    public void ОтправитьПосылку(Посылка посылка)
    {
        общийВесОтправленныхПосылок += посылка.Вес;

        if (общийВесОтправленныхПосылок > лимитВесаОтправленныхПосылок)
        {
            Console.WriteLine("Превышен лимит веса отправленных посылок!");
            общийВесОтправленныхПосылок -= посылка.Вес; // Отменяем отправку текущей посылки
            return;
        }

        Console.WriteLine($"Отправлена посылка: {посылка.Описание}, весом {посылка.Вес} кг");
    }
}

